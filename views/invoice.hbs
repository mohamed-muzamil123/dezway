        transform: translateX(-50%);
        background: var(--primary);
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s;
        white-space: nowrap;
    }
    .copy-tooltip:after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 50%;
        transform: translateX(-50%);
        border-width: 5px 5px 0;
        border-style: solid;
        border-color: var(--primary) transparent transparent;
    }
    .copied .copy-tooltip {
        opacity: 1;
        visibility: visible;
        top: -35px;
    }
