<style>
    :root {
        --background: #fff;
        --foreground: #020817;
        --muted: #f1f5f9;
        --muted-foreground: #64748b;
        --border: #e2e8f0;
        --primary: #0f172a;
        --primary-foreground: #f8fafc;
    }

    [data-theme="dark"] {
        --background: #020817;
        --foreground: #f8fafc;
        --muted: #1e293b;
        --muted-foreground: #94a3b8;
        --border: #1e293b;
        --primary: #f8fafc;
        --primary-foreground: #0f172a;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background-color: var(--background);
        color: var(--foreground);
        min-height: 100vh;
    }

    .header {
        position: sticky;
        top: 0;
        z-index: 50;
        border-bottom: 1px solid var(--border);
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        height: 56px;
    }

    .card-custom {
        background-color: var(--background);
        border: 1px solid var(--border);
        border-radius: 0.5rem;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
    }

    .card-description {
        font-size: 0.875rem;
        color: var(--muted-foreground);
    }

    .nav-tabs-custom {
        border-bottom: 1px solid var(--border);
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        white-space: nowrap;
    }

    .nav-tabs-custom .nav-link {
        color: var(--muted-foreground);
        border: none;
        padding: 0.5rem 1rem;
        font-weight: 500;
        display: inline-block;
    }

    .nav-tabs-custom .nav-link.active {
        color: var(--foreground);
        background-color: var(--muted);
        border-radius: 0.375rem;
    }

    .btn-primary-custom {
        background-color: var(--primary);
        color: var(--primary-foreground);
        border: none;
    }

    .btn-primary-custom:hover {
        opacity: 0.9;
    }

    .table-custom th {
        font-weight: 500;
        color: var(--muted-foreground);
        font-size: 0.875rem;
    }

    .modal-custom .modal-content {
        background-color: var(--background);
        border: 1px solid var(--border);
    }

    .form-control-custom {
        background-color: var(--background);
        color: var(--foreground);
        border: 1px solid var(--border);
    }

    .form-control-custom:focus {
        border-color: var(--primary);
        box-shadow: none;
    }

    /* Mobile-specific styles */
    @media (max-width: 767.98px) {
        .container-fluid {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
        
        main {
            padding: 0.5rem !important;
        }
        
        .table-responsive {
            display: block;
            width: 100%;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }
        
        .table-custom {
            min-width: 600px; /* Minimum width to show all columns */
        }
        
        .header .col-auto {
            padding-right: 0.5rem;
        }
        
        .card-body {
            padding: 0.75rem;
        }
        
        .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        .modal-dialog {
            margin: 0.5rem;
            max-width: calc(100% - 1rem);
        }
        
        .nav-tabs-custom .nav-link {
            padding: 0.5rem 0.75rem;
            font-size: 0.875rem;
        }
        
        .card-title {
            font-size: 0.9375rem;
        }
        
        .card-description {
            font-size: 0.8125rem;
        }
    }

    /* Small devices (landscape phones, less than 576px) */
    @media (max-width: 575.98px) {
        .container-fluid {
            padding-left: 0.25rem;
            padding-right: 0.25rem;
        }
        
        .btn {
            font-size: 0.8125rem;
        }
        
        .modal-dialog {
            margin: 0.25rem;
            max-width: calc(100% - 0.5rem);
        }
    }
</style>

<div class="d-flex flex-column min-vh-100">
    <!-- Header -->
    <header class="header">
        <div class="container-fluid h-100">
            <div class="row h-100 align-items-center mx-0">
                <div class="col ps-2">
                    <a href="/admin" class="fw-bold text-decoration-none">
                        Dezway
                    </a>
                </div>
                <div class="col-auto pe-2">
                    <button class="btn btn-primary-custom btn-sm" id="open-invoice-modal">
                        <i class="bi bi-plus me-1"></i>
                        New Invoice
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="flex-grow-1">
        <div class="container-fluid px-0">
            <div class="row mx-0">
                <main class="col-12 px-2 py-3">
                    <!-- Tabs -->
                    <div class="px-2">
                        <ul class="nav nav-tabs-custom mb-3" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a href="/admin" class="nav-link active" id="overview-tab" data-bs-toggle="tab" role="tab" aria-controls="overview" aria-selected="true">
                                    Overview
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Invoices Table - Mubashir -->
                    <div class="card-custom mx-1">
                        <div class="card-body px-2 py-3">
                            <div class="d-flex justify-content-between align-items-center mb-3 px-1">
                                <div>
                                    <h5 class="card-title mb-1">All Invoices</h5>
                                    <p class="card-description mb-0">MUBASHIR</p>
                                </div>
                            </div>
                            
                            <div class="table-responsive">
                                <table class="table table-custom table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Client Code</th>
                                            <th>Client</th>
                                            <th>Contact</th>
                                            <th>Amount</th>
                                            <th>Date</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each clients}}
                                           {{#if (eq this.creator "Mubashir")}}
                                            <tr>
                                                <td>{{this.clientCode}}</td>
                                                <td>{{this.client}}</td>
                                                <td>{{this.contact}}</td>
                                                <td>{{this.amount}}</td>
                                                <td><span class="badge bg-success">{{this.date}}</span></td>
                                                <td>{{this.description}}</td>
                                               <td>
                                                    <form action="/admin/delete" method="POST">
                                                        <input type="hidden" name="id" value="{{this._id}}">
                                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        {{/if}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Invoices Table - Shaheer -->
                    <div class="card-custom mx-1 mt-3">
                        <div class="card-body px-2 py-3">
                            <div class="d-flex justify-content-between align-items-center mb-3 px-1">
                                <div>
                                    <h5 class="card-title mb-1">All Invoices</h5>
                                    <p class="card-description mb-0">SHAHEER</p>
                                </div>
                            </div>
                            
                            <div class="table-responsive">
                                <table class="table table-custom table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Client Code</th>
                                            <th>Client</th>
                                            <th>Contact</th>
                                            <th>Amount</th>
                                            <th>Date</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each clients}}
                                         {{#if (eq this.creator "Shaheer")}}
                                        <tr>
                                            <td>{{this.clientCode}}</td>
                                            <td>{{this.client}}</td>
                                            <td>{{this.contact}}</td>
                                            <td>{{this.amount}}</td>
                                            <td><span class="badge bg-success">{{this.date}}</span></td>
                                            <td>{{this.description}}</td>
                                           <td>
                                                <form action="/admin/delete" method="POST">
                                                    <input type="hidden" name="id" value="{{this._id}}">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        {{/if}}
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
</div>

<!-- Invoice Modal -->
<div class="modal fade" id="invoiceModal" tabindex="-1" aria-labelledby="invoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-custom">
            <div class="modal-header">
                <h5 class="modal-title" id="invoiceModalLabel">Create New Invoice</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="create-invoice-form" action="/admin/add-invoice" method="post">
                <div class="mb-3">
                    <label for="client-code" class="form-label">Client Code</label>
                    <input type="number" class="form-control form-control-custom" id="client-code" name="clientCode" placeholder="Enter client code" required>
                </div>
                <div class="mb-3">
                    <label for="client-name" class="form-label">Client Name</label>
                    <input type="text" class="form-control form-control-custom" id="client-name" name="client" placeholder="Enter client name" required>
                </div>
                <div class="mb-3">
                    <label for="client-phone" class="form-label">Phone Number</label>
                    <input 
                        type="tel" 
                        class="form-control form-control-custom" 
                        id="client-phone" 
                        name="contact" 
                        placeholder="Enter client number" 
                        pattern="[0-9]{10}" 
                        maxlength="10" 
                        minlength="10"
                        required
                    >
                </div>
                <div class="mb-3">
                    <label for="amount" class="form-label">Amount</label>
                    <input type="number" class="form-control form-control-custom" id="amount" name="amount" placeholder="0.00" step="0.01" required>
                </div>
                <div class="mb-3">
                    <label for="due-date" class="form-label">Due Date</label>
                    <input type="date" class="form-control form-control-custom" id="due-date" name="date" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control form-control-custom" id="description" name="description" rows="3"></textarea>
                </div>
                
                <!-- Creator Selection Dropdown -->
                <div class="mb-3">
                    <label for="creator" class="form-label">Creator</label>
                    <select class="form-select form-control-custom" id="creator" name="creator" required>
                        <option value="" selected disabled>Select creator</option>
                        <option value="Shaheer">Shaheer</option>
                        <option value="Mubashir">Mubashir</option>
                    </select>
                </div>
                
                <div class="modal-footer border-top-0 px-0 pb-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary-custom">Create Invoice</button>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Initialize modal
    const invoiceModal = new bootstrap.Modal(document.getElementById('invoiceModal'));
    
    // Open modal when button is clicked
    document.getElementById('open-invoice-modal').addEventListener('click', () => {
        invoiceModal.show();
    });
    
    // Tab functionality
    const triggerTabList = [].slice.call(document.querySelectorAll('#myTab a'));
    triggerTabList.forEach(function (triggerEl) {
        const tabTrigger = new bootstrap.Tab(triggerEl);
        
        triggerEl.addEventListener('click', function (event) {
            event.preventDefault();
            tabTrigger.show();
        });
    });
</script>

<div id="flashMessage" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1050; width: auto; max-width: 95%;">
  {{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
      {{success_msg}}
    </div>
  {{/if}}

  {{#if error_msg}}
    <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
      {{error_msg}}
    </div>
  {{/if}}
</div>

<script>
  setTimeout(() => {
    const flash = document.getElementById('flashMessage');
    if (flash) {
      flash.style.display = 'none';
    }
  }, 2000);
</script>